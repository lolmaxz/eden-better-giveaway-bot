datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}


///
/// MODELS
///

model GuildConfig {
  guild_id                      String   @id
  guild_name                    String
  guild_owner_user_id           String
  bot_managers                  String   @default("") // a concatenated string of user IDs
  staff_log_channel_id          String?
  createdAt                     DateTime @default(now())
  updatedAt                     DateTime @updatedAt
}